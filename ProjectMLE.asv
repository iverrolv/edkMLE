% Consts
Fs = 10e6;
f0 = 10e5;
T = 10e-6;
w0 = 2*pi*f0;
phi = pi/8;
A = 1;

% Samples
N = 513;
P = N*(N-1)/2;
Q = N*(N-1)*(2*N-1)/6;
n0 = -P/N; % -256
n = n0:1:n0+N-1;



% White Gaussian noise, E=0, Var = Sigma2
SNR = 10;
tmp = 10^(SNR/10);
sigma2 = (A^2)/(2*tmp);
sigma = sqrt(sigma2);
wgnR = sigma*randn(1, N);
wgnI = sigma*randn(1, N)*1i;
wgn = wgnR+wgnI;

% x[n]
x = A*exp(1i*(w0*n*T+phi))+wgn;
plot(n, x)
